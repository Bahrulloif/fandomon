<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Индикатор уровня -->
    <View
        android:id="@+id/levelIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="#4CAF50" />

    <!-- Содержимое лога -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок лога -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/logTimestampText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:34:56"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/logLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="monospace"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/logTagText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FandomatTag"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="#1976D2" />

        </LinearLayout>

        <!-- Сообщение лога -->
        <TextView
            android:id="@+id/logMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сообщение лога из приложения Fandomat"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:textColor="#333333"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>
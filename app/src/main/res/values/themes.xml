<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fandomon" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>

        <!-- For tablet landscape mode -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <!-- Theme for splash screen or specific activities -->
    <style name="Theme.Fandomon.NoActionBar" parent="Theme.Fandomon">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for settings -->
    <style name="Theme.Fandomon.Settings" parent="Theme.Fandomon">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
</resources>